{
  "name": "scandicraft_launcher",
  "version": "3.0.0",
  "description": "ScandiCraft Launcher",
  "main": "src-electron/index.js",
  "scripts": {
    "pack-dev": "npx webpack --config webpack.dev.js",
    "pack-prod": "npx webpack --config webpack.prod.js",
    "build-win64": "npm run pack-prod && electron-builder build --win --x64",
    "build-win32": "npm run pack-prod && electron-builder build --win --x32",
    "build-mac": "npm run pack-prod && electron-builder build --mac",
    "build-linux": "npm run pack-prod && electron-builder build --linux",
    "start": "electron .",
    "start-e": "electron ./dist/electron.bundle.js"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-react": "^7.9.4",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "electron": "^8.3.0",
    "electron-builder": "^22.6.0",
    "html-webpack-plugin": "^4.3.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {
    "@material-ui/core": "^4.9.14",
    "@material-ui/icons": "^4.9.1",
    "electron-log": "^4.1.2",
    "electron-updater": "^4.3.1",
    "esm": "^3.2.25",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "build": {
    "productName": "ScandiCraft",
    "appId": "fr.scandicraft-mc",
    "files": [
      "dist/",
      "node_modules/",
      "src-electron/",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.games",
      "target": [
        "zip",
        "dmg"
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Game"
    },
    "nsis": {
      "perMachine": true
    },
    "directories": {
      "buildResources": "resources",
      "output": "build"
    },
    "publish": [
      {
        "provider": "generic",
        "url": "http://localhost:8000/launcher/update"
      }
    ]
  },
  "author": {
    "name": "BriceFab",
    "email": "bricefab123@gmail.com"
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/fabrriva/scandicraft_launcher.git"
  },
  "license": "UNLICENSED"
}
